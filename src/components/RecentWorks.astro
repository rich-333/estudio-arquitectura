---
import Section from "../components/Section.astro";
import { recentWorks } from "../data/recentWorks";
import type { Work } from "../data/recentWorks";

const { id } = Astro.props;
---

<Section id={id} sectionTitle="RECENT WORKS" classMB="mb-12" class="md:my-24" sectionSubtitle="Some of our crafts made with love">
  <div class=" flex flex-col gap-10 md:gap-20 md:last:gap-12 xl:grid xl:grid-cols-2 xl:items-end">
    {
      recentWorks.map((work: Work) => (
        <article class=" flex flex-col gap-4">
          <img class="md:w-full" src={work.image} alt={work.title}/>
          <h4 class=" font-secondary text-2xl leading-8 font-normal md:text-4xl md:leading-12">{work.title}</h4>
          <p class=" text-neutral-black-700 text-sm leading-6 font-light md:text-lg md:leading-8">{ work.description }</p>
        </article>
      ))
    }
    <footer>
      <a class=" px-6 bg-primary-brown-600 text-white w-40 h-14 font-semibold flex items-center justify-center" href="#" aria-label="Go to contact section">
        CONTACT US
      </a>
    </footer>
  </div>
</Section>