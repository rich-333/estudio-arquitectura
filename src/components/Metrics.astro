---
import { string } from "astro:schema";
import { metrics } from "../data/metrics";
import type { DataMetrics } from "../data/metrics";

---

<div class="max-w-7xl flex items-center justify-center mb-12 xl:mx-auto">
  <section class="w-[350px] md:w-2xl xl:w-7xl">
    <div class=" flex flex-col gap-6 justify-center mb-12 md:flex-row md:justify-between xl:mb-20">
      {
        metrics.map((metric : DataMetrics) => (
          <div class=" flex gap-5 items-end md:flex-col md:items-start md:gap-2 xl:flex-row xl:items-end">
            <span class="leading-none text-5xl font-secondary font-normal md:text-6xl">{metric.quantities}</span>
            <span class=" font-normal text-sm  w-40">{metric.description}</span>
          </div>
        ))
      }
    </div>
    <div class="border-1 border-neutral-grey-300"></div>
  </section>
</div>