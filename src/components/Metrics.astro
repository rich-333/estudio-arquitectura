---
import { string } from "astro:schema";

interface DataMetrics {
  quantities: string;
};

const description = "SATISFITATION CLIENTS"; 

const metrics: DataMetrics[] = [
  { quantities: "100%" },
  { quantities: "250" },
  { quantities: "3469" }
];
---

<div class="max-w-5xl flex items-center justify-center mb-12">
  <section class="w-[350px]">
    <div class=" flex flex-col gap-6 justify-center mb-12">
      {
        metrics.map((metric : DataMetrics) => (
          <div class=" flex gap-5 items-end">
            <span class="leading-none text-5xl font-secondary font-normal">{metric.quantities}</span>
            <span class=" font-normal text-sm tracking-wider w-36">{description}</span>
          </div>
        ))
      }
    </div>
    <div class="border-1 border-neutral-grey-300"></div>
  </section>
</div>