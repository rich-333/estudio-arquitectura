---
import { string } from "astro:schema";

interface DataMetrics {
  quantities: string;
  description: string;
};

const metrics: DataMetrics[] = [
  { 
    quantities: "100%",
    description: "SATISFITATION CLIENTS"
  },

  { 
    quantities: "250",
    description: "EMPLOYEES ON WORLDWIDE" 
  },

  { 
    quantities: "3469",
    description: "PROJECTS COMPLETED ON 60 COUNTRIES" 
  }
];
---

<div class="max-w-5xl flex items-center justify-center mb-12">
  <section class="w-[350px] md:w-2xl">
    <div class=" flex flex-col gap-6 justify-center mb-12 md:flex-row md:justify-between">
      {
        metrics.map((metric : DataMetrics) => (
          <div class=" flex gap-5 items-end md:flex-col md:items-start md:gap-2">
            <span class="leading-none text-5xl font-secondary font-normal md:text-6xl">{metric.quantities}</span>
            <span class=" font-normal text-sm  w-40">{metric.description}</span>
          </div>
        ))
      }
    </div>
    <div class="border-1 border-neutral-grey-300"></div>
  </section>
</div>